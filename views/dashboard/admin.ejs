<% extend('../layouts/dashboard-layout') %>

<form 
  method="POST" 
  class="row justify-content-center">
  <div class="col-md-6">
    
    <label for="title">Please Enter Topics</label>
    <input type="text" id="title" class="form-control" name="title" placeholder="Topics" value="">
    <hr>
    <textarea name="content" id="editor" class="form-control">
      
    </textarea>
    <script>
			CKEDITOR.replace( 'content' );
		</script>
  </div>
  <div class="col-md-3">
    
    <div class="card mb-3">
      <h6 class="card-header">Categories</h6>
      <div class="card-body">
        
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="radio" name="category" required value="-L2TajOWL1ycB_hwyiK-" 
                
                >
              Property Insurance
            </label>
          </div>
        
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="radio" name="category" required value="-L2VDz-ovFCKMA34kfdY" 
                
                >
              Health Insurance
            </label>
          </div>
        
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="radio" name="category" required value="-L3VkF87JcRmUUjxhi0g" 
                
                >
              Deposit Insurance
            </label>
          </div>
        
      </div>
    </div>

    <div class="card mb-3">
      <h6 class="card-header">Pubiic or not</h6>
      <div class="card-body">
        <div class="btn-group btn-group-toggle w-100" data-toggle="buttons">
          <label class="btn btn-outline-primary w-100 ">
            <input type="radio" name="status" autocomplete="off" value="draft"  > Draft
          </label>
          <label class="btn btn-outline-primary w-100 ">
            <input type="radio" name="status" autocomplete="off" value="public"  > Public
          </label>
        </div>
      </div>
    </div>

    <div class="btn-group w-100">
      <button type="submit" class="btn btn-outline-primary w-100">Save</button>
    </div>
  </div>
</form>
